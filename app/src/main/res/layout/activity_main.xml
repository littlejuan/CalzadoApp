<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="org.littlejuan.calzadoapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="Cliente" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="4dp">

            <!-- Cedula field -->
            <EditText
                android:id="@+id/edit_nombre"
                style="@style/EditorFieldStyle"
                android:hint="Nombre"
                android:inputType="textCapWords" />

            <!-- Nombre field -->
            <EditText
                android:id="@+id/edit_cedula"
                style="@style/EditorFieldStyle"
                android:hint="CÃ©dula"
                android:inputType="textCapWords" />
        </LinearLayout>
    </LinearLayout>

    <!-- Gender category -->
    <LinearLayout
        android:id="@+id/container_tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="Tipo" />

        <!-- Input field -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Tipo spinner -->
            <Spinner
                android:id="@+id/spinner_tipo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingRight="16dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_tall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="Talla" />

        <!-- Input field -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Tipo spinner -->
            <Spinner
                android:id="@+id/spinner_talla"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingRight="16dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="Cantidad" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="4dp">

            <!-- Resultado field -->
            <EditText
                android:id="@+id/edit_cantidad"
                style="@style/EditorFieldStyle"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="Resultado" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="4dp">

            <!-- Resultado field -->
            <EditText
                android:id="@+id/edit_resultado"
                style="@style/EditorFieldStyle"
                android:editable="false"
                android:inputType="none" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <Button
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Evaluar"
            android:id="@+id/btn0"
            android:onClick="onEvaluar"
            android:layout_gravity="center_vertical" />

        <Button
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:onClick="onGuardar"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/btn1"
            android:layout_gravity="center_vertical" />

        <Button
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:onClick="onBuscar"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:id="@+id/btn2"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center">
        <Button
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:onClick="onLimpiar"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:id="@+id/btn3"
             />

        <Button
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:onClick="onSalir"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:id="@+id/btn5"
             />
    </LinearLayout>

</LinearLayout>
